html
  head
    title='Testing task Evercode'
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    style
      include styles/index.css
      
  body(class='container h-100 d-flex flex-column align-items-center justify-content-center')
    h1(class='h1')= 'Add new currency'
    form(class='p-2 border rounded h-25 d-flex flex-column align-items-center justify-content-between')
      div(class="form-group")
        label(for="ticker")
        input(type="text" class="form-control" id="ticker" placeholder="Enter ticker" minlength="3" maxlength="6" pattern="[a-zA-Z0-9]*" required)
      div(class="form-group")
        label(for="name-currency")
        input(type="text" class="form-control" id="name-currency" placeholder="Enter currency" maxlength="21" pattern="[a-zA-Z0-9]*" required)
      button(type="submit" class="btn btn-primary")="Add"
    script
      include scripts/api/api.js
    script
      include scripts/add.js
